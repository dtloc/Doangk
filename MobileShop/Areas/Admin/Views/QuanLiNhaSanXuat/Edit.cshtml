@model PlMoblieConnection.nhasanxuat
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayOutAdmin.cshtml";


    @section head{
        @Styles.Render("~/Assets/Admin/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css")
    }
}

<style>
    input[type=text], select {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 50%;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #808080;
        }
</style>
<div class="box" style="width:84.3%; float:right;background-color:lightslategray">
    @using (Html.BeginForm("Edit", "QuanLiNhaSanXuat", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <label for="fname">Mã Nhà Sản Xuất</label>
        <input type="text" id="fname" name="MaNSX" value="@Model.MaNSX" />

        <label for="lname"> Tên Nhà Sản Xuất </label>
        <input type="text" id="lname" name="TenNSX" value="@Model.TenNSX" />
        
        <div class="box-header">
            <label class="box-title">
                Mô Tả
            </label>
        </div>
        <div class="box-body pad">
            
                @Html.TextAreaFor(model => model.MoTa, new { @id = "editor1", @name = "editor1", @style = "width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            
        </div>
        
        <input type="submit" value="Submit"/>
    }
</div>

@section scripts{
    @Scripts.Render("~/Assets/Admin/dist/js/demo.js",
                    "~/Assets/Admin/plugins/fastclick/fastclick.js",
                    "https://cdn.ckeditor.com/4.5.7/standard/ckeditor.js",
                    "~/Assets/Admin/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js")
    <script>
      $(function () {
        CKEDITOR.replace('editor1');
        $(".textarea").wysihtml5();
      });
    </script>
    @Html.AntiForgeryToken();
}





